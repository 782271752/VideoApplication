<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="#f2f2f2"
              android:orientation="vertical"
        >
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            >
        <ImageView
                android:layout_marginTop="2dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo"
                />
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dip"
                >
            <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/fm_app_name"
                    android:textColor="#5c687a"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowColor="#FFFFFF"
                    android:shadowRadius="2"/>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dip"
                    android:paddingTop="3dip"
                    android:layout_gravity="top|right"
                    >
                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="@string/fm_version_mark"
                        android:textColor="#9fa2a8"
                        android:textSize="12sp"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowColor="#FFFFFF"
                        android:shadowRadius="2"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
                android:id="@+id/about_version"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="3dip"
                android:textColor="#adadad"
                android:textSize="18sp"
                android:shadowDx="2"
                android:shadowDy="2"
                android:text="软件版本:1.0.0"
                android:shadowColor="#FFFFFF"
                android:shadowRadius="1"/>
        <TextView
                android:id="@+id/mjkf_about_copy_right"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="2dip"
                android:textColor="#adadad"
                android:textSize="16sp"
                android:text="Copyright©2014-2015 飞磨科技,"
                android:autoLink="all"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowColor="#FFFFFF"
                android:shadowRadius="1"/>
        <!-- android:text="@string/mjkf_about_copy_right" -->
        <TextView
                android:id="@+id/mjkf_about_url"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="2dip"
                android:textColor="#adadad"
                android:textSize="16sp"
                android:text="All Rights Reserved."
                android:autoLink="all"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowColor="#FFFFFF"
                android:shadowRadius="1"/>
        <!-- android:text="@string/mjkf_about_url" -->
        
        <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="2dip"
                android:textColor="#adadad"
                android:textSize="16sp"
                
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowColor="#FFFFFF"
                android:shadowRadius="1"/>
        <!-- android:text="@string/mjkf_about_all_rights_reserved" -->
        
        <TextView
                android:id="@+id/mjkf_about_slogan"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="2dip"
                android:textColor="#adadad"
                android:textSize="16sp"
                
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowColor="#FFFFFF"
                android:shadowRadius="1"/>
        <!-- android:text="@string/mjkf_about_slogan" -->
        
        <Button
                android:id="@+id/about_more_recommend_soft"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="2dip"
                android:textColor="@color/gray3"
                android:textSize="16sp"
                
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowColor="#FFFFFF"
                android:shadowRadius="1"
                android:visibility="gone"
                />
        <!-- android:text="@string/mjkf_about_more_recommend_soft" -->
        
    </LinearLayout>
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="100dip"
            android:gravity="bottom"
            android:padding="20dip"
            >
        <TextView
                android:id="@+id/mjkf_about_logos"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
               
                android:textColor="#adadad"
                android:textSize="15sp"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowColor="#FFFFFF"
                android:shadowRadius="1"/>
        <!--  android:text="@string/mjkf_about_logos" -->
    </LinearLayout>
</LinearLayout>