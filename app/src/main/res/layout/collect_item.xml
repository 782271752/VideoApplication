<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">

    <RelativeLayout
        android:descendantFocusability="blocksDescendants"
        android:id="@+id/left_layout_l"
        android:focusable="false"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="5dp"

        >

        <RelativeLayout
            android:id="@+id/left_img_layout"
            android:layout_width="200dp"
            android:layout_height="100dp">

            <ImageView
                android:focusable="false"
                android:id="@+id/home_item_img1"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/video_bottom_bg"/>

            <TextView
                android:id="@+id/home_item_playcount1"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:text="3.8万"
                android:drawablePadding="4dp"
                android:drawableLeft="@drawable/play"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="4dp"
                android:textColor="@color/white"
                android:background="#80FF7900"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="#70000000">

                <TextView
                    android:id="@+id/home_item_flower1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="32131"
                    android:textColor="@color/white"

                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:drawableLeft="@drawable/flower"
                    />

                <TextView
                    android:id="@+id/home_item_comment1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:text="32131"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:drawableLeft="@drawable/commet"
                    />

                <TextView
                    android:id="@+id/home_item_time1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="01:25"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingRight="15dp"
                    />

                </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/home_item_introduce1"
            android:layout_below="@id/left_img_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:ellipsize="end"
            android:text="32123141241341312"
            android:lines="2"/>


        <RelativeLayout
            android:id="@+id/check_img_left_layout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"

            >
            <ImageView
                android:layout_width="60dp"
                android:layout_centerInParent="true"
                android:src="@drawable/check_bg"
                android:layout_height="60dp" />
        </RelativeLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/right_layout_r"
        android:focusable="false"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="5dp"
        android:visibility="invisible"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/right_img_layout"
            android:layout_width="200dp"
            android:layout_height="100dp">

            <ImageView
                android:focusable="false"
                android:id="@+id/home_item_img2"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/video_bottom_bg"/>

            <TextView
                android:id="@+id/home_item_playcount2"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:text="3.8万"
                android:drawablePadding="4dp"
                android:drawableLeft="@drawable/play"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="4dp"
                android:textColor="@color/white"
                android:background="#80FF7900"/>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="18dp"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="#70000000">

                <TextView
                    android:id="@+id/home_item_flower2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="32131"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:drawableLeft="@drawable/flower"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:id="@+id/home_item_comment2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:text="32131"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:drawableLeft="@drawable/commet"
                    />

                <TextView
                    android:id="@+id/home_item_time2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="01:25"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingRight="15dp"
                    />

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/home_item_introduce2"
            android:layout_below="@id/right_img_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:lines="2"
            android:ellipsize="end"
            android:text="32123141241341312"/>

        <RelativeLayout
            android:id="@+id/check_img_right_layout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"

            >
            <ImageView
                android:layout_width="60dp"
                android:layout_centerInParent="true"
                android:src="@drawable/check_bg"
                android:layout_height="60dp" />
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
