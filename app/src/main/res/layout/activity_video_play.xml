<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/video_bottom_bg">



        <RelativeLayout
            android:id="@+id/video_play_title_layout"
            android:background="@drawable/bg"
            android:layout_width="fill_parent"
            android:layout_height="50dp">

            <ImageButton
                android:padding="5dp"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:src="@drawable/back"
                android:background="@drawable/search_btn"
                android:id="@+id/video_play_back" />

            <TextView
                android:id="@+id/video_play_title"
                android:layout_width="200dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:textSize="20sp" />

            <ImageButton

                android:layout_alignParentRight="true"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:src="@drawable/persion"
                android:background="@drawable/search_btn"
                android:id="@+id/video_play_persion" />

            <ImageButton
                android:layout_toLeftOf="@id/video_play_persion"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:scaleType="centerInside"
                android:layout_centerVertical="true"
                android:src="@drawable/video"
                android:background="@drawable/search_btn"
                android:id="@+id/video_play_transcribe" />

        </RelativeLayout>


        <!--RelativeLayout
            android:id="@+id/play_video_layout"
            android:layout_below="@id/play_title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/backgroundColor" >

            <RelativeLayout
                android:id="@+id/header_wrapper"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_alignParentTop="true" >

                <RelativeLayout
                    android:id="@+id/view_holder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true" >

                    <com.baidu.cyberplayer.core.BVideoView
                        android:id="@+id/video_view"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/controlbar"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/play_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/play_btn_style" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:background="#70000000"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/time_current"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="4dip"
                            android:layout_gravity="center_vertical"
                            android:paddingRight="4dip"
                            android:paddingTop="4dip"
                            android:text="00:00"

                            android:textColor="@color/play_time"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <SeekBar
                            android:id="@+id/media_progress"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="0dip"
                            android:layout_gravity="center_vertical"
                            android:layout_height="30dip"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/time_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:paddingLeft="4dip"
                            android:paddingRight="4dip"
                            android:paddingTop="4dip"
                            android:text="00:00"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/play_time"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/zoom_btn"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/screensize_zoomout_button" />
                    </LinearLayout>
                </RelativeLayout>


            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@id/play_video_layout"
            android:id="@+id/playt_share_layout"
            android:layout_width="fill_parent"
            android:gravity="center_vertical"
            android:background="@drawable/detail_bg"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/play_flower_txt"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:drawableTop="@drawable/detail_flower"
                android:text="1231"
                />

            <TextView
                android:id="@+id/play_collect_txt"
                android:layout_toRightOf="@id/play_flower_txt"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:drawableTop="@drawable/detail_collect"
                android:text="1231"
                />

            <TextView
                android:id="@+id/play_download_txt"
                android:layout_toRightOf="@id/play_collect_txt"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:drawableTop="@drawable/detail_download"
                android:text="1231"
                />

            <ImageView
                android:id="@+id/play_share_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/detail_share"
                />

            <Button
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:textSize="14sp"
                android:layout_toLeftOf="@id/play_share_btn"
                android:text="立即安装游戏"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/game_comment_title"
            android:layout_below="@id/playt_share_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="玩家点评"
            android:layout_margin="10dp"/>

        <View
            android:layout_below="@id/game_comment_title"
            android:id="@+id/game_comment_view"
            android:layout_marginTop="5dp"
            android:layout_width="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="1px"
            android:background="#E4E4E4" /-->

        <com.li.videoapplication.View.RefreshListView
            android:id="@+id/play_comment_list"
            android:layout_below="@id/video_play_title_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="@null"
            android:scrollbars="none"

            android:divider="@null">
        </com.li.videoapplication.View.RefreshListView>



    <RelativeLayout
        android:id="@+id/video_play_comment_layout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/detail_bg"
        android:layout_alignParentBottom="true">


        <Button
            android:layout_alignParentRight="true"
            android:id="@+id/play_sumbit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/commit_btn"/>

        <EditText
            android:id="@+id/play_edt"
            android:layout_toLeftOf="@id/play_sumbit"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginLeft="10dp"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>

</RelativeLayout>

